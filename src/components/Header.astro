---
import HeaderLink from '#astro/components/HeaderLink.astro';
import { SITE_TITLE } from '#astro/consts';
// import ThemeToggle from '#astro/components/ThemeToggle.astro';

import { Icon } from 'astro-icon'
import Pattern from './Pattern.astro';
---

<style>
	header {
		margin: 0;
		padding: 0 var(--paddingSides);
		padding-top: 2rem;
		z-index: 1;
	}

	h1 a  {
		color: var(--accent);
		text-decoration: none;
	}
	h1 {
		margin: 0;
		font-size: 3em;
		text-align: center;
		font-weight: 100;
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-direction: column;
		gap: 1.5rem;
		align-items: stretch;
	}
	.internalLinks {
		font-size: 1.3em;
		display: flex;
		justify-content: center;
		align-items: center;
		gap: .8rem;
	}

	@media screen and (min-width: 768px) {
		h1 {
			font-size: 3em;
		}

		nav {
			flex-direction: row;
		}

		.internalLinks {
			flex-wrap: wrap;
		}		
	}

    svg {
		width: 1rem;
        fill: var(--text);
    }

	@media print {
		header {
			display: none;
		}
	}
</style>

<header>
	<nav>
		<h1>
			<a href="/">{SITE_TITLE}</a>
		</h1>
		<div class="internalLinks">
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href="/tags">Tags</HeaderLink>
			<HeaderLink href="/rss.xml" title="RSS">
				<Icon name='rss' />
			</HeaderLink>
			<!-- <ThemeToggle /> -->
		</div>
	</nav>
	<Pattern />
</header>
