---
import HeaderLink from '#astro/components/HeaderLink.astro';
import { SITE_TITLE } from '#astro/consts';
import ThemeToggle from '#astro/components/ThemeToggle.astro';

---

<header>
	<nav>
		<h1>
			<a href="/">{SITE_TITLE}</a>
		</h1>
		<div class="internalLinks">
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/projects">Projects</HeaderLink>
			<HeaderLink href="/tags">Tags</HeaderLink>
			<HeaderLink href="/rss.xml">RSS</HeaderLink>
			<ThemeToggle />
		</div>
	</nav>	
</header>
<style>
	header {
		margin: 0;
		padding: 0 calc(var(--paddingSides) / 1.5);
		padding-top: 1rem;
	}

	h1 a  {
		color: var(--accent);
		text-decoration: none;
	}
	h1 {
		margin: 0;
		font-family: 'Brush Script MT', cursive;
		font-size: 3em;
		text-align: center;
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-direction: column;
		gap: 1.5rem;
		align-items: stretch;
	}
	.internalLinks {
		font-size: 1.3em;
		display: flex;
		gap: 1rem;
		justify-content: center;
		align-items: center;
	}
	
	@media screen and (min-width: 768px) {
		h1 {
			font-size: 4em;
		}

		nav {
			flex-direction: row;
		}

		.internalLinks {
			flex-wrap: wrap;
		}		
	}

</style>
