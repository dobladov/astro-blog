<script>
    document.body.removeAttribute('data-ja');
    const themeButton = document.getElementById('themeButton');

    if (themeButton) {
        const theme = document.body.getAttribute('data-theme')
        
        const isDarkTheme = theme === 'dark' || (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)
        themeButton.innerText = isDarkTheme ? '‚òÄÔ∏è' : 'üåÉ'
        
        themeButton.addEventListener('click', () => {
            if (themeButton.innerText === '‚òÄÔ∏è') {
                localStorage.setItem('theme', 'light');
                document.body.setAttribute('data-theme', 'light');
                themeButton.innerText = 'üåÉ';
                
            } else {
                localStorage.setItem('theme', 'dark');
                themeButton.innerText = '‚òÄÔ∏è';
                document.body.setAttribute('data-theme', 'dark');
            }
        })
    }

</script>

