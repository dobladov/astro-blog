---
interface Props {
    title: string;
}

const {title} = Astro.props;
---

<header>
    <h2 class="pageTitle">{title}</h2>
</header>
<style>
    .pageTitle {
        font-size: 1.6rem;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--accent);
    }
</style>
